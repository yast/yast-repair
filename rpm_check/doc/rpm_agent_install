#!/bin/bash
PREFIX=/usr/local/yast2/modules/y2m_os_repair/rpm_check/
DB_DIR=/tmp
SCR_DIR=/usr/lib/YaST2/scrconf
AG_DIR=/usr/lib/YaST2/servers_non_y2
RPM_LIST_FILE=$PREFIX/test_scripts/Minimal+X11.sel
SCR_NAME=rpm.scr
SCR_FNAME=$PREFIX/scripts/$SCR_NAME
AG_NAME=ag_rpm
AG_FNAME=$PREFIX/bin/$AG_NAME

DB_NAME=/tmp/RPM_DB_$HOSTNAME

####################################################
echo "rpm dDB name is " $DB_NAME
echo -n "start copy " $RPM_LIST_FILE " to " $DB_DIR
cp $RPM_LIST_FILE  $DB_DIR
echo " ....done (exit" $? ")"
pushd $SCR_DIR
echo -n "create SCR-link"
if ( test -L $SCR_NAME ) || ( test -e $SCR_NAME ) ;then
	 rm -vi $SCR_NAME
fi
ln -s $SCR_FNAME $SCR_NAME
echo " ....done (exit " $? ")"
popd
pushd $AG_DIR
echo -n "create AG-link"
if ( test -L $AG_NAME ) || ( test -e $AG_NAME ) ;then
	 rm -vi $AG_NAME
fi
ln -s $AG_FNAME $AG_NAME
echo " ....done (exit " $? ")"
popd
