#!/bin/bash
PREFIX=/tmp/RPM_dDB_test
DB_DIR=/tmp
SCR_DIR=/usr/lib/YaST2/scrconf
AG_DIR=/usr/lib/YaST2/servers_non_y2
RPM_LIST_FILE=Minimal+X11.sel
SCR_NAME=rpm.scr
SCR_FNAME=$PREFIX/scripts/$SCR_NAME
AG_NAME=ag_rpm
AG_FNAME=$PREFIX/bin/$AG_NAME

DB_NAME=/tmp/RPM_DB_$HOSTNAME

####################################################
echo "rpm dDB name is " $DB_NAME
rm -vi $DB_DIR/$RPM_LIST_FFILE 
pushd $SCR_DIR  > /dev/null
if ( test -L $SCR_NAME ) || ( test -e $SCR_NAME ) ;then
	 rm -vi $SCR_NAME
fi
popd > /dev/null
pushd $AG_DIR > /dev/null
if ( test -L $AG_NAME ) || ( test -e $AG_NAME ) ;then
	 rm -vi $AG_NAME
fi
popd > /dev/null

